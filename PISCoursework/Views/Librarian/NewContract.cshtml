@model PISBusinessLogic.BindingModels.ContractBindingModel

@{
    ViewData["Title"] = "Читательский билет";
}
<div class="text-left text-info">
    <h1>@ViewData["Title"]</h1>
</div>
@using (Html.BeginForm("NewContract", "Librarian", FormMethod.Get))
{
    <p>
        <div class="col-sm-8">
            Дата:<br>
            <input type="date" name="Date" />
        </div>
        <div class="col-sm-8">
            Дата возврата:<br>
            <input type="date" name="DateReturn" />
        </div>
        <a class="btn btn-info btn-sm" href="/Librarian/AddContractBooks/ViewBag.Id">заключить новый договор</a>
        <input type="hidden" value="@ViewBag.Exists.Id" name="LibrarianCardId" />
        @Html.ValidationSummary(true, "", new { @style = "color: black" })
        <div class="col-sm-8">
            <input type="submit" value="Сохранить" class="btn btn-info btn-sm" />
        </div>
    </p>
}

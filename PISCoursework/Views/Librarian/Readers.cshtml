@model PISBusinessLogic.BindingModels.UserBindingModel
@{
    ViewData["Title"] = "Читатели";
}

<div class="text-center text-info">
    <h1>Читатели</h1>
</div>
<hr />
<p> <strong> <a class="btn btn-info btn-sm" href="/Librarian/ReadersWithOverdue">Читатели просрочившие срок сдачи книг</a></strong></p>
<hr />
<form asp-controller="Librarian" asp-action="Readers" method="get">
    <div class="col-sm-8">
        Найти по ФИО:
        @Html.TextBoxFor(x => x.FIO)
        <input type="submit" value="найти" class="btn btn-info btn-sm" />
    </div>
</form>
<table class="table">
    <tr>

        <td>ФИО</td>
        <td>Логин</td>
        <td>Читательский билет</td>
        <td>Продление</td>
        <td>Заключить договор</td>
    </tr>

    @foreach (PISBusinessLogic.ViewModels.UserViewModel user in ViewBag.Users)
    {
<tr>
    <td>@user.FIO</td>
    <td>@user.Email</td>
    <td>
        <a class="btn btn-info btn-sm" href="/Librarian/AddLibraryCard/@user.Id">просмотреть читательский билет</a>
    </td>
    <td>
        @Html.ActionLink("продлить билет", "AddLibraryCard", new { id = @user.Id, prolong = true }, new { @class = "btn btn-info btn-sm" })
    </td>
    <td>
        @Html.ActionLink("заключить договор", "AddContractBooks", new { email = @user.Email, id = ViewBag.Create }, new { @class = "btn btn-info btn-sm" })
    </td>
</tr>
    }
</table>

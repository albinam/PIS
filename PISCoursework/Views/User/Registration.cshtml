@model PISCoursework.Models.RegistrationModel

@{
    ViewData["Title"] = "Регистрация";
}
<div class="text-left text-info">
    <h1>@ViewData["Title"]</h1>
</div>
@using (Html.BeginForm("Registration", "User"))
{
    <p>
        Email: <br>
        @Html.TextBoxFor(x => x.Email)<br>
        Пароль:<br>
        @Html.TextBoxFor(x => x.Password)<br>
        ФИО:<br>
        @Html.TextBoxFor(x => x.FIO)
    </p>
    @Html.ValidationSummary(true, "", new { @style = "color: red" })
    <input type="submit" value="Зарегистрироваться" class="btn btn-info btn-sm" />
}


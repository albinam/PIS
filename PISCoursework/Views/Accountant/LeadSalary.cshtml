@{
    ViewData["Title"] = "Ведомость заработной платы";
}
<div class="text-center text-info">
    <h3>Ведомость заработной платы</h3>
</div>
<hr />
<form asp-controller="Report" asp-action="LeadSalary">

    <div class="col-sm-8">
        Месяц:<br>
        <input type="month" name="month" />
    </div>
    <br />
    <div class="col-sm-8">
        <input type="submit" value="Сформировать" class="btn btn-info btn-sm" />
    </div>

    @Html.ValidationSummary(true, "", new { @style = "color: black" })
    @if (ViewBag.Payment != null)
    {
<table class="table">
    <tr>
        <td>Номер платежа</td>
        <td>ФИО библиотекаря</td>
        <td>Сумма, руб.</td>
        <td>Подпись</td>
    </tr>
    @foreach (var r in ViewBag.Payment)
    {
        foreach (var u in ViewBag.Users)
        {
            if (r.UserId == u.Id)
            {
                <tr>
                    <td>@r.Id</td>

                    <td>@u.FIO</td>

                    <td>@r.Sum</td>
                </tr>
            }

        }
    }
    
</table>
<div class="col-sm-8">
    @Html.ActionLink("Ведомость.docx", "SaveLead", "Report", new { list = ViewBag.Payment}, new { @class = "btn btn-info btn-sm" })
</div>
    }
</form>